<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lsh.birthday.mapper.CommentMapper">

    <!-- 查找信息 -->
    <select id="findAll" resultType="com.lsh.birthday.entry.Comment">
        select * from comment
    </select>
    
    <insert id="addComm" parameterType="com.lsh.birthday.entry.Comment">
        insert into comment (context) values (#{context,jdbcType=VARCHAR})
    </insert>

</mapper>